<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardBackgroundColor="@color/grey"
    app:cardElevation="10dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="2dp">


    <LinearLayout
        android:id="@+id/itemLayoutOut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="0dp">

            <TextView
                android:id="@+id/tvGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="The Last of Us Part 1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Jugado"
                android:textStyle="italic" />
            <!--<Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="BORRAR"
                android:textSize="6dp"
                />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="4dp"
                    android:src="@drawable/baseline_star_outline_24" />

                <ImageView
                    android:id="@+id/ivCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/ivStar"
                    android:paddingEnd="4dp"
                    android:src="@drawable/bx_circle" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnConsole"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/ivStar"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/green"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPlatform"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="PC - PS4 - PS5"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tloup1crop2"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>